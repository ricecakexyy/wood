<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SLQJActivity"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/slqj_bg"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="150dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-20dp">
        <Button
            android:id="@+id/btn_vrmuseum"
            android:layout_width="102dp"
            android:layout_height="189dp"
            android:textColor="#ebdaac"
            android:onClick="GotoVRMuseum"
            android:background="@mipmap/slqj_btn1"
            android:layout_gravity="center"
            android:layout_marginRight="30dp" />


        <Button

            android:id="@+id/btn_3dshow"
            android:layout_width="102dp"
            android:layout_height="189dp"
            android:textSize="24sp"
            android:gravity="center"
            android:ems="1"
            android:textColor="#ebdaac"
            android:onClick="Goto3Dshow"
            android:background="@mipmap/slqj_btn2"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"/>
        <Button
            android:id="@+id/btn_petshow"
            android:layout_width="102dp"
            android:layout_height="189dp"
            android:textSize="24sp"
            android:gravity="center"
            android:ems="1"
            android:textColor="#ebdaac"
            android:onClick="GotoAIshow"
            android:background="@mipmap/slqj_btn3"
            android:layout_gravity="center"/>
    </LinearLayout>


</RelativeLayout>