<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/show3d_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".SLQJ.Show3d.Main3dActivity">

    <com.xlyj.utils.StatusBarHeightView
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:use_type="use_padding_top"
        android:orientation="vertical"/>
    <TextView
        android:id="@+id/tv_modelname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="忆江南"
        android:textColor="#3d2a1e"
        android:textSize="28sp" />

    <RelativeLayout
        android:id="@+id/rl_show3d"
        android:layout_width="match_parent"
        android:layout_height="280dp">
        <ImageView
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:src="@mipmap/show3d_round"
            android:layout_centerInParent="true"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/layout_point"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="#00000000"
        android:gravity="center"
        android:orientation="horizontal" />
</LinearLayout>