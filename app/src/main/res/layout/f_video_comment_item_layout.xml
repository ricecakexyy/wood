<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/comment_item_logo"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/m_head_default"
            app:riv_oval="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/comment_item_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字"
                android:textColor="#5B595A"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/comment_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="1小时前"
                android:textColor="#989898"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/comment_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="4dp"
        android:text="木雕是个很费时间的活。年轻人的血液里都充斥着三分钟的热度。很少有人能够有耐心静静坐下来，时间在指尖流逝。一刀一刻留下了，瑰宝在指尖绽放。小的时候在老家还有见过木工，从选材到成品，每一道工序每一样工具都亲自经手。木质也是千百年来人们日常使用比较多的材质，在过去，在现在，在将来，木材一直都在我们的身边。前尘，昨夜，此刻。我们也许做不了传承人，但可以成为传统手艺的传播者。致敬手艺人。"
        android:lineSpacingExtra="3dp"
        android:textColor="#484848"
        android:textSize="14sp" />

    <!--    占位置的隐藏，并且高度设置的很小，用来获取行数-->
    <TextView
        android:id="@+id/view_seemore_tvlinecount"
        android:textColor="#000"
        android:visibility="invisible"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <!--    显示更多和收起-->
    <TextView
        android:id="@+id/view_seemore_tv_seemore"
        android:layout_marginLeft="52dp"
        android:layout_marginBottom="8dp"
        android:text="查看更多"
        android:textColor="@color/bk_blue"
        android:visibility="gone"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp">
        <ImageView
        android:id="@+id/comment_item_like"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/f_video_com_icon_like"
            android:padding="1dp"/>

        <ImageView
            android:id="@+id/iv_comment_cnt"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/f_publish_comment_icon"
            android:layout_marginLeft="23dp"/>

        <ImageView
            android:id="@+id/iv_send"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/f_publish_share_icon"
            android:padding="2dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_moew"
            android:layout_width="20dp"
            android:layout_gravity="right"
            android:layout_height="20dp"
            android:src="@drawable/icon_vertical_more_black"
            android:padding="2dp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

</LinearLayout>