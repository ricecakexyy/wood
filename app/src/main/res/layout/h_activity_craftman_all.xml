<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.xlyj.wood.utils.StatusBarHeightView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:use_type="use_padding_top"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:src="@drawable/h_culture_icon" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="匠人"
                android:textColor="#000000"
                android:textSize="35sp" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:src="@drawable/h_culture_icon" />
        </LinearLayout>
    </com.xlyj.wood.utils.StatusBarHeightView>

    <com.dalong.library.view.LoopRotarySwitchView
        android:id="@+id/mLoopRotarySwitchView"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_weight="1"
        app:direction="right"
        android:layout_height="0dp">
        <LinearLayout
            android:id="@+id/ll_p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/craftsman_p1"
                app:riv_oval="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="姓名"
                android:textSize="16sp"
                android:textColor="@color/gray"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/craftsman_p2"
                app:riv_oval="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="姓名"
                android:textSize="16sp"
                android:textColor="@color/gray"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_p3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/craftsman_p3"
                app:riv_oval="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name3"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="姓名"
                android:textSize="16sp"
                android:textColor="@color/gray"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_p4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/craftsman_p4"
                app:riv_oval="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name4"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="姓名"
                android:textSize="16sp"
                android:textColor="@color/gray"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_p5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/craftsman_p5"
                app:riv_oval="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name5"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="姓名"
                android:textSize="16sp"
                android:textColor="@color/gray"/>
        </LinearLayout>
    </com.dalong.library.view.LoopRotarySwitchView>
</LinearLayout>